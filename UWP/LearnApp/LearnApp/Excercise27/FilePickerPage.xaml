<Page
    x:Class="LearnApp.Excercise27.FilePickerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LearnApp.Excercise27"
    xmlns:dat="using:LearnApp.Excercise1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Name="MyStackPanel" Orientation="Horizontal" Margin="20">
        <TextBlock Text="Select an MP3 file : "/>
        <Button Content="Choose..." VerticalAlignment="Top" Margin="20,0,0,0" Click="OpenAFile"/>
        <MediaElement Name="AudioPlayer" AutoPlay="True" Visibility="Collapsed"/>
        <Frame>
            <Page DataContext="{Binding }">
            </Page>
        </Frame>
    </StackPanel>
</Page>
